{
    "name": "kader",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:server": "turbo build --filter=\"@kader/server\"",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "start:server": "bun run ./apps/server/dist/index.js"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^2.0.14",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "bun@1.1.22",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "drizzle-orm": "^0.33.0"
    }
}
